<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/craftbackgroundcolor"
    tools:context=".StudentInfo"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/alert_light_frame"
        tools:context=".StudentInfo">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profilepic"
            android:layout_width="147dp"
            android:layout_height="154dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="237dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/profilepic"
            android:text="Premal Singh"
            android:textColor="@android:color/background_dark"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="220dp"
            android:layout_height="29dp"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/profilepic"
            android:text="Date of Birth: 1998-05-20"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/usn"
            android:layout_width="211dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/profilepic"
            android:layout_toEndOf="@+id/profilepic"
            android:text="USN: 1RV16CS105"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/category"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profilepic"
            android:layout_below="@+id/profilepic"
            android:text="Category of Admission: COMEDK"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/bloodgroup"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/profilepic"
            android:layout_marginTop="196dp"
            android:text="Blood Group: B+ve"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/phone1"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profilepic"
            android:layout_centerVertical="true"
            android:text="Mob:8982625174"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/phone2"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/phone1"
            android:text="Mob:7619360139"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/address"
            android:layout_width="368dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="176dp"
            android:text="Address: Room No. C-222, Cauvery Hostel, RVCE, Bangalore"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/counsellor"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="149dp"
            android:text="Counsellor: Prof. Azra Nasreen"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/dept"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="111dp"
            android:text="Department: CSE"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/profilepic"
            android:layout_marginBottom="88dp"
            android:text="Semester: 5"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sem"
            android:layout_centerHorizontal="true"
            android:text="Section: 5C"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/scheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/sem"
            android:text="Scheme: 2016"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/rvceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="68dp"
            android:text="RVCE Mail ID: premalsingh.cs16@rvce.edu.in"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/changepwd"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/edit"
            android:layout_alignStart="@+id/profilepic"
            android:background="?android:attr/colorFocusedHighlight"
            android:text="Chnage Password" />

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:layout_below="@+id/rvceid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-36dp"
            android:background="@android:color/holo_blue_bright"
            android:text="Edit Information" />

        <Button
            android:id="@+id/logout"
            android:layout_width="100dp"
            android:layout_height="86dp"
            android:layout_alignEnd="@+id/name"
            android:layout_below="@+id/rvceid"
            android:layout_marginTop="-38dp"
            android:background="@android:color/holo_green_dark"
            android:text="Logout" />

        <ProgressBar
            android:id="@+id/loading_prog"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_alignStart="@+id/rvceid" />

    </RelativeLayout>
</RelativeLayout>