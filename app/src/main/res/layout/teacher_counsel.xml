<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:background="@android:color/white"
      android:layout_width="match_parent"
      android:layout_weight="0.40"
      android:orientation="vertical"
      android:layout_height="0dp">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.7"
          android:scaleType="fitCenter"
          android:layout_gravity="center"
          android:src="@drawable/ic_person_black_24dp"
          android:background="@mipmap/profile_cover"
          android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.3"
        android:layout_height="0dp">
     <TextView
         android:id="@+id/studentname"
         android:text="NAME"
         android:textColor="#000000"
         android:textSize="15dp"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="0.5"/>
     <TextView
         android:id="@+id/studentusn"
         android:text="USN"
         android:textSize="15dp"
         android:textColor="#000000"
         android:layout_width="0dp"
         android:layout_weight="0.5"
         android:layout_height="match_parent" />


    </LinearLayout>

  </LinearLayout>
   <LinearLayout

       android:layout_weight="0.60"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="0dp">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_weight="0.5"
       android:layout_marginBottom="10dp"
       android:layout_height="0dp">
  <LinearLayout
      android:layout_width="match_parent"
       android:orientation="horizontal"
      android:layout_height="0dp"
      android:layout_weight="1">

       <TextView
           android:id="@+id/studentphno"
           android:layout_width="0dp"
           android:text="Ph no:"
           android:textColor="#000000"
           android:layout_height="match_parent"
           android:layout_weight="1"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:src="@mipmap/whatsapp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"/>
     <ImageView
         android:layout_width="0dp"
         android:src="@drawable/ic_phone_black_24dp"
         android:layout_gravity="center"
         android:scaleType="fitCenter"
         android:layout_height="match_parent"
         android:layout_weight="0.5"/>

  </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="0dp"
           android:layout_weight="1">

           <TextView
               android:id="@+id/studentmailid"
               android:layout_width="0dp"
               android:textColor="#000000"
               android:text="MAIL"
               android:layout_height="match_parent"
               android:layout_weight="1"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:src="@mipmap/email"
               android:layout_gravity="center"
               android:scaleType="fitCenter"
               android:layout_height="match_parent"/>

       </LinearLayout>
     <Button
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:textColor="#000000"
         android:background="#FFA010"
         android:layout_weight="1"/>



   </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">

     <TextView
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:textSize="15dp"
         android:textStyle="bold"
         android:text="PARENT/GAURDIAN DETAILS"
         android:textColor="#000000"
         android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/gaurdianphno"
                android:layout_width="0dp"
                android:text="Ph no:"
                android:textColor="#000000"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:src="@mipmap/whatsapp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="0dp"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/gaurdianmail"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:text="MAIL"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@mipmap/email"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>



   </LinearLayout>



</LinearLayout>
